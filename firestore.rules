
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own data.
      allow read, write: if request.auth.uid == userId;

      // Allow any authenticated user to read the `users` collection.
      // This is necessary for the Community Showcase feature.
      allow list: if request.auth != null;
    }

    // Rules for the contest sessions
    match /contestSessions/{sessionId} {
      // Any authenticated user can create or join a session, and read its state.
      allow read, write: if request.auth != null;
    }
  }
}
