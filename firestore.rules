rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Any authenticated user can view the list of users for the community page.
      allow list: if request.auth != null;
    }

    // Any authenticated user can read and write to the shared contest data.
    match /contestSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
  }
}
