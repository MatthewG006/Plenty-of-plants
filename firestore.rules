
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own data.
      allow read, write: if request.auth.uid == userId;

      // Allow any authenticated user to list users for the community page.
      allow list: if request.auth != null;
    }
    
    // Allow any authenticated user to get a specific contest session document.
    match /contestSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow any authenticated user to query the contestSessions collection.
    // This is required to find an open session.
    match /contestSessions/{document=**} {
      allow list: if request.auth != null;
    }
  }
}
