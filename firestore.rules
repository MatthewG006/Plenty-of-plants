
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read and fully write to their own document.
      // This covers creating their profile and most self-updates.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow any authenticated user to list all users for the community page.
      allow list: if request.auth != null;
      
      // Allow an authenticated user to "like" another user.
      // This is more secure than a general 'write'. It allows another user
      // to update *only* the 'likes' and 'gold' fields.
      allow update: if request.auth != null 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'gold', 'likedUsers']);
      
      // A user can read and write to all of their own subcollections.
      // This includes game data, plants, arrangements, etc.
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for the 'community-plants' collection
    match /community-plants/{plantId} {
        // Allow any authenticated user to read community plants
        allow read: if request.auth != null;
    }

    // Rules for the 'contestSessions' collection
    match /contestSessions/{sessionId} {
      // Allow any authenticated user to read and write to contest sessions.
      // This is required for finding, joining, creating, and voting in the contest.
      allow read, write: if request.auth != null;

      // Allow access to the contestants subcollection
      match /contestants/{contestantId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
