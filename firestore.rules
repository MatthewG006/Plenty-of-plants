rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read and write to any document.
    // This is a broad rule suitable for development but should be refined
    // for production with more granular access control.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
