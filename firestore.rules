rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own data.
      allow read, write: if request.auth.uid == userId;

      // Allow any authenticated user to read the `users` collection.
      // This is necessary for the Community Showcase feature.
      allow list: if request.auth != null;
    }

    match /contestSessions/{sessionId} {
      // This rule allows any authenticated user to get, update, or delete a *specific* session document by its ID.
      // It also allows them to create a new session document.
      allow read, write: if request.auth != null;
    }

    // THIS IS THE CRITICAL FIX:
    // This rule allows any authenticated user to perform a query on the contestSessions collection.
    // It is required for the findOrCreateContestSessionAction to find an open session.
    match /contestSessions/{document=**} {
      allow list: if request.auth != null;
    }
  }
}
